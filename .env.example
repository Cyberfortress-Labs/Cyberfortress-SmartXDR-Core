# Elasticsearch Configuration
ELASTICSEARCH_HOSTS=https://192.168.100.128:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password_here

# SSL/TLS Configuration
# Path to CA certificate for self-signed certificates
# If not provided, SSL verification will be disabled (verify_certs=False)
ELASTICSEARCH_CA_CERT=certs/ca.crt

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# IRIS API Configuration
IRIS_API_URL=https://iris.cyberfortress.local
IRIS_API_KEY=your_iris_api_key_here
# Set to 'true' to verify SSL certificate, 'false' to disable (for self-signed certs)
IRIS_VERIFY_SSL=false
# Optional: Path to CA certificate file
# IRIS_CA_CERT=certs/iris_ca.crt

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO
